<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.ViewPage"
    tools:showIn="@layout/activity_view_page">

    <TextView
        android:id="@+id/pageHeadingViewTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standardSpace"
        android:textSize="@dimen/headingTextSize"
        android:text="Heading Text"/>

    <TextView
        android:id="@+id/contentViewTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standardSpace"
        android:textSize="@dimen/pageTextSize"
        android:text="Page Text"/>

    <EditText
        android:id="@+id/enterAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/testHint"
        android:layout_margin="@dimen/standardSpace"
        android:textSize="@dimen/pageTextSize"
        android:backgroundTint="@color/colorPrimary"/>

    <Button
        android:id="@+id/submitAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standardSpace"
        android:textSize="@dimen/pageTextSize"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="@string/checkTest"
        android:textColor="@color/colorWhite"
        android:padding="@dimen/standardSpace"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>